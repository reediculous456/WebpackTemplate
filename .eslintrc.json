{
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "semi": [ 2, "always" ],
    "array-bracket-spacing": [ 2, "always" ],
    "no-const-assign": 2,
    "no-var": 2,
    "indent": [ 2, 2, { "SwitchCase": 1 } ],
    "quotes": [ 2, "backtick" ],
    "global-require": 2,
    "no-plusplus": 2,
    "prefer-const": 2,
    "no-trailing-spaces": 2,
    "no-multi-spaces": 2,
    "prefer-template": 2,
    "keyword-spacing": 2,
    "space-before-blocks": 2,
    "sort-imports": [ 2, {
      "ignoreCase": false,
      "ignoreDeclarationSort": false,
      "ignoreMemberSort": false,
      "memberSyntaxSortOrder": [ "none", "all", "multiple", "single" ]
    } ],
    "no-multiple-empty-lines": [ 1, { "max": 1, "maxEOF": 0 } ],
    "no-console": 0
  },
  "globals": {
    "$": true
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  }
}